<h1>ユーザー新規登録</h1>

<%= form_with model: @user , url: user_registration_path , id: 'user' , local: true do |f| %> 
<%#(resource_name) , as: resource_name%>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :profile %><br />
    <%= f.text_area :profile, autocomplete: "profile" %>
  </div>

  <div class="field">
    <%= f.label :occupation %><br />
    <%= f.text_field :occupation, autocomplete: "occupation" %>
  </div>

  <div class="field">
    <%= f.label :position %><br />
    <%= f.text_field :position, autocomplete: "position" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
